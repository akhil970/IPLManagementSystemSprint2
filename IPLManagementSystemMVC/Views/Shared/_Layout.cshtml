<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>IPL T20</title>
    <link rel="icon" href="~/Images/Logos/ipl logo 2.jpeg" type="image/image" style="height:16px;width:16px">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:darkblue;height:80px">
        <a href="#" class="navbar-brand" style="background-color:darkblue"><img style="height:50px; width:60px" src="~/Images/Logos/ipl logo 2.jpeg" /></a>

        @Html.ActionLink("IPL ManagementSystem", "Index", "HomePage", new { area = "" }, new { @class = "navbar-brand", @style = "color:azure;font-weight:bold;padding-top:30px;" })
    </div>
    <div style="float:right;margin:70px;">
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - IPL Management System Application</p>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
